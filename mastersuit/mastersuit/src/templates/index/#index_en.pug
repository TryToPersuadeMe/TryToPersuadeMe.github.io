//- mixins
include ~@/templates/_adjacent/pictureBlock.pug
include ~@/templates/_adjacent/_bookingForm.pug
include ~@/templates/__global/layout/_footer.pug
include ~@/templates/__global/layout/_header.pug


mixin popUp(id,img, title,[...text])
  .popUp(id=`popUpWindow-js-${id}`)
    .popUp__container
      button.popUp__closeButton закрыть
      .popUp__img
        img(src=require(`@/assets/images/${img}`), alt="img")
      .popUp__column
        h3.popUp__title= title
        .popUp__textWrapper
          each val in [...text]
            p.popUp__text= val
        



doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Mastersuit - main page
  body
  .wrapper.wrapper_absoluteHeader
    +header("en")


    .firstScreen.zIndexLayer
      .containter.firstScreen__container
        h1.firstScreen__title Fashion Cafe with authentic handmade desserts that are cooked with only natural ingredients.
        .firstScreen__logo 
          img(src=require("@/assets/images/_global/logo.svg"), alt="logo")
      
      .swiper-container.firstScreen__slider
        .container.firstScreen__paginationContainer
          .firstScreen__pagination.swiper-pagination
        .swiper-wrapper
          .swiper-slide.firstScreen__slide
            .firstScreen__bgImage 
              img(src=require("@/assets/images/index/firstScreen/1.png"), alt="ресторан")
          .swiper-slide.firstScreen__slide
            .firstScreen__bgImage 
              img(src=require("@/assets/images/index/firstScreen/2.png"), alt="ресторан")
          .swiper-slide.firstScreen__slide
            .firstScreen__bgImage 
              img(src=require("@/assets/images/index/firstScreen/3.png"), alt="ресторан")
          .swiper-slide.firstScreen__slide
            .firstScreen__bgImage 
              img(src=require("@/assets/images/index/firstScreen/4.png"), alt="ресторан")
          .swiper-slide.firstScreen__slide
            .firstScreen__bgImage 
              img(src=require("@/assets/images/index/firstScreen/5.png"), alt="ресторан")
    
    .textBlock.zIndexLayer 
      .container
        p.defaultText One of the most famous Moscow
        p.defaultText boutique-ateliers “Mastersuit”,
        p.defaultText  located on the Prechistenka street, has opened its cafe 
        p.defaultText  with a menu of European cuisine.

    +pictureBlock("mainPageParallax","true")

      



    .notesWrapper.zIndexLayer
      .container
        .noteBlock
          .noteBlock__img 
            img(src=require("@/assets/images/index/noteBlock/1.jpg"), alt="img").wow.animate__animated.animate__fadeInLeft
          
          .noteBlock__column 
            h4.noteBlock__painting New menu
            h2.noteBlock__title New summer menu
            .noteBlock__textWrapper
              p.defaultText.noteBlock__text New special meals of the summer menu 
              p.defaultText.noteBlock__text from our chef are already waiting for you!
